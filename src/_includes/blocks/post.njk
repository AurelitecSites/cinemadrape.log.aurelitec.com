{% macro postBlock(post, isSingle) %}
  {{ post.date.toLocaleDateString("en-US", { month: "long", day: "numeric", year: "numeric" }) }}

  {{ post.data.location }}
  {{ post.data.country }}

  <h1><a href="{{ post.url }}">{{ post.data.title }}</a></h1>
  
  {{ post.templateContent | safe if isSingle else post.data.page.excerpt | md | safe }}

  {{ post.data.tags }}
{% endmacro %}