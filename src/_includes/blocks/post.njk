{% macro postBlock(post, isSingle) %}
  <article class="log-post log-whole">
    <div class="log-half">
      <p>
        <div class="log-post-date">
          {{ post.date.toLocaleDateString("en-US", { month: "long", day: "numeric", year: "numeric" }) }}
        </div>
        {% if post.data.locationReason %}
          <div class="log-post-location-reason">
            [{{ post.data.locationReason }}]
          </div>
        {% endif %}
        <div class="log-post-location">
          {{ post.data.location + ", " if post.data.location }}{{ post.data.country }}
        </div>
      </p>
    </div>
    <div class="log-half">

      <h1 class="log-post-title"><a href="{{ post.url }}">{{ post.data.title }}</a></h1>
      
      {{ post.templateContent | safe if isSingle else post.data.page.excerpt | md | safe }}

      {# {{ post.data.tags }} #}
    </div>
  </article>
{% endmacro %}